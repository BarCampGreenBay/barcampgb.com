<div class="attendance-info">
  <% if signed_in? %>
    <% if current_user.presentations.where(id: presentation.id).any? %>
      <%= link_to('Unattend This Session', attend_presentation_path(presentation), remote: true, class: 'btn btn-danger toggle-attendance') %>
    <% else %>
      <%= link_to('Attend This Session', attend_presentation_path(presentation), remote: true, class: 'btn btn-primary toggle-attendance') %>
    <% end %>
  <% end %>
  <span class="attendance-count"><%= pluralize(presentation.users.count, 'attendees') %></span>
</div>