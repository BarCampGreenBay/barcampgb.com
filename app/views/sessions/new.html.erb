<div class="row-fluid">
  <div class="span4 offset4">
    <%= form_tag(sessions_path, class: 'single-form') do %>
      <h1>Sign In</h1>
      <div class="control-group required">
        <%= label_tag(:email) %>
        <div class="controls">
          <%= text_field_tag(:email, params[:email], class: 'input-block-level') %>
        </div>
      </div>

      <div class="control-group required">
        <%= label_tag(:password) %>
        <div class="controls">
          <%= password_field_tag(:password, nil, class: 'input-block-level') %>
        </div>
      </div>

      <%= button_tag('Sign In', class: 'btn btn-primary') %>
      <%= link_to('Forgot password?', new_password_reset_path) %>
    <% end %>
  </div>
</div>